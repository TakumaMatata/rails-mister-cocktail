<div class="container">
  <div class="row">
    <div class="col-xs-4 col-sm-8 col-md-12">
      <div class="space-top">
        <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
        <h1><%= @cocktail.name %></h1>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                  <br>
                <% end %>
              </td>
            </tr>
          <% end %>
        <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %>
      </div>
    </div>
  </div>
</div>

